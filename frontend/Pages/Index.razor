@page "/"

<PageTitle>To do List</PageTitle>
<div class="add-form">
<BSLabel>To do List: </BSLabel>

<BSInput @bind-Value="description"
placeholder="Escreva seu item a fazer ..."
InputType="InputType.TextArea"/>

<BSLabel>Para:</BSLabel>
<BSInput
    InputType="InputType.DateTimeLocal"
   @bind-Value="deadline" />

    <BSButton Color="BSColor.Dark"@onclick= "OnAdd">Adicionar</BSButton>
    </div>

<BSAccordion>
    <BSAccordionItem>
        <Header>Accordion Item #1</Header>
        <Content>
            <strong>This is the first item's accordion body.</strong> It is shown by default. Placeholder content for this accordion.
        </Content>
    </BSAccordionItem>
 

    @code{
        List<ToDoElement> List = new List<ToDoElement>();
        string description = "";
        DateTime deadline = DateTime.Now;

        public void OnAdd()
        {
ToDoElement element = new ToDoElement();
element.Descricao = description;
element.Prazo= deadline;
element.Feito = false;
List.Add(element);

description = "";
deadline = DateTime.Now;
StateHasChanged();
        }
    }